{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "experimentalDecorators": true,
    "typeRoots": [
      "/node_modules/@type",
      "typings/modules"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "app/dist",
    "baseUrl": "."
  },
  "include": [
    "app/src/**/*"
  ],
  "exclude": [
    "/node_modules"
  ]
}